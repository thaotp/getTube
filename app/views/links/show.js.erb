$('.content').html('')
<% if @video_list.present? && @link.youtube_type.playlist? %>
  $('.content').append('<%= escape_javascript(render partial: 'list', locals: {video_list: @video_list}) %>');
<% elsif @formats.present? %>
  $('.content').append('<%= escape_javascript(render partial: 'video', locals: {formats: @formats, video: @video}) %>');
<% else %>
  $('.content').append('<%= escape_javascript(render partial: 'not_found') %>');
<% end %>

window.history.pushState({turbolinks: true, url: "/links/<%= @link.slug %>"}, 'show', "/links/<%= @link.slug %>")